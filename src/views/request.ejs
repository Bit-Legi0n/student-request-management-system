<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="userName" content="<%= user.name %>">
    <meta name="requestId" content="<%= request.id %>">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
        integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/studentDashboard.css" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css"
    crossorigin="anonymous" />
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/dayjs/1.10.4/dayjs.min.js" crossorigin="anonymous"></script>
    <title>Requests</title>

</head>
<body>
    <%- include('./partials/navbar'); %>
        <div class="container">
            <div class="row">
                <div class="conversation-wrap col-lg-2">
                </div>
                <div class="message-wrap col-lg-8">
                    <div class="msg-wrap">
                        <br />
                       
                        
                            <div class="card bg-secondary text-white">
                                <div class="card-header">
                                    Request Type: <%= request.type %>
                                </div>
                                <div class="card-body">

                                    <h6 class="card-title">Request Status: <%= request.status %></h6>
                                    <p class="card-text">T<%= request.body %></p>
                                    
                                    
                                    <% if (request.attachment) { %>
                                        <i class="fa fa-paperclip" aria-hidden="true"></i>
                                        <span class="initialism">Attachment:&nbsp;</span>
                                        <a class="card-link" href="/uploads/<%= request.attachment %>" download>
                                          <%= request.attachment.substring(37) %></a>
                                  <% } %>

                                  <h6 class="card-subtitle mb-2 text-right initialism">
                                    <i class="fas fa-clock"></i>
                                    <span>&nbsp;
                                      <script type="text/javascript">
                                          document.write(
                                              dayjs("<%= request.datetime %>").format("YYYY/MM/DD h:mmA")
                                          );
                                      </script>
                                    </span>
                                  </h6>
                                
                                    <br/>
                                    <% if (user.isStaff()){ %>
                                    <p class="card-text">Update Request Status</p>
                                    <form action="/reply/<%= request.id %>/status" method="post">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="reqStatus"
                                                id="reqStatus1" value="approved">
                                            <label class="form-check-label" for="reqStatus1">
                                                Accept
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="reqStatus"
                                                id="reqStatus2" value="declined">
                                            <label class="form-check-label" for="reqStatus2">
                                                Decline
                                            </label>
                                        </div>
                                        <button type="submit" class="btn btn-primary">Submit Status</button>
                                    </form>
                                    <% } %>
                                    <br />
                                </div>
                            </div>
                            <br />
                        


                        <% replies.forEach(function(reply) { %>
                            <% if (reply.name == user.name) { %>
                            <div class="card text-white bg-info">
                                <% }  else {%> 
                                <div class="card bg-light">
                                <% } %>
                                <h5 class="card-header"><%= reply.name %></h5>
                                <div class="card-body">
                                  <p class="card-text">
                                    <%= reply.body %>
                                  </p>
                                  <span class="float-right">
                                  </span>
                                  <% if (reply.name == user.name) { %>
                                    <h6 class="card-subtitle mb-2 text-right initialism">
                                        <% }  else {%> 
                                            <h6 class="card-subtitle mb-2 text-muted text-right initialism">
                                        <% } %>
                                  
                                    <i class="fas fa-clock"></i>
                                    <span>
                                        <script type="text/javascript">
                                            document.write(
                                                dayjs("<%= reply.datetime %>").format("YYYY/MM/DD h:mmA")
                                            );
                                        </script>
                                        </span>
                                  </h6>
                                  <% if (reply.attachment) { %>
                                  <i class="fa fa-paperclip" aria-hidden="true"></i>
                                  <span class="initialism">Attachment:&nbsp;</span>
                                  <a href="/uploads/<%= reply.attachment %>" download>
                                    <%= reply.attachment.substring(37) %></a>
                            <% } %>
                                </div>
                              </div>
                              <br />

                        <% }); %>
                    </div>
                    <br />
                     

                    <% if(user.isStaff()){ %>
                        <form id="reply-form" action="/reply/<%= request.id %>" method="post">
                            <div class="send-wrap mt-3">
                                <textarea class="form-control send-message" rows="3" name="body" id="rbody"
                                    placeholder="Write a reply..."></textarea>
                            </div>
                            <div class="btn-panel mt-1">
                                <div class="input-group mb-1">
                                    <button type="submit" class="col-lg-3 btn btn-primary">Send Reply</button>
                                </div>
                            </div>
                        </form>
                    <% } else { %>
                        <form id="reply-form" action="/reply/<%= request.id %>" method="post" enctype="multipart/form-data">
                            <div class="send-wrap mt-3">
                                <textarea class="form-control send-message" rows="3" name="body" id="rbody"
                                    placeholder="Write a reply..."></textarea>
                            </div>
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="fileInput" aria-describedby="fileInput"
                                    name="file">
                                <label class="custom-file-label" for="fileInput">Choose file</label>
                            </div>
                            <div class="btn-panel mt-1">
                                <div class="input-group mb-1 ">
                                    <button type="submit" class="col-lg-3 btn btn-primary">Send Reply</button>
                                </div>
                            </div>
                        </form>
                        <script src="/js/requestUpload.js" crossorigin="anonymous"></script>
                    <% } %>
                </div>
            </div>
        </div>
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" crossorigin="anonymous"></script>
        <script src="/socket.io/socket.io.js"></script>
        <script src="/js/socket.js"></script>
</body>
</html>